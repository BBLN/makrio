<div id="framer">
    <div class="container">
        <div class="row">
            <div class="span6 offset3">
                <div class="row">
                    <div class="span4 offset1">
                        {{#if sourcePost}}
                            <div id="reshare media author">

                                 <div class="media author">
                                    <h1> Remixing... </h1>
                                    {{#linkToPerson author}}
                                        <div class="img">
                                            <div class="profile-image-container smaller" style="background-image : url('{{avatar.large}}')"></div>
                                        </div>
                                    {{/linkToPerson}}

                                    <div class="bd">
                                        {{#linkToPerson author}}
                                            {{name}}
                                        {{/linkToPerson}}
                                        <br/>
                                        <a href='/posts/{{sourcePost.id}}' target='_blank'>source</a>
                                    </div>
                                </div>
                            </div>
                        {{else}}
                            <h3>
                                Make something!
                            </h3>
                        {{/if}}
                    </div>
                </div>

                <div class="row">
                    <div class="flow-content"/>
                </div>
                <div class="row">
                    <div class="flow-controls">
                        <div class="controls"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

