{{#unless loggedIn}}
    <div style="margin-top:10px;margin-left:10px;margin-right:10px;">
        <a href="/users/auth/facebook" class="btn new-btn fb-btn" style="margin-right:10px;">
            <img src="{{imageUrl "logos/fb_f.png"}}" class="fb-f" />
            Log in with Facebook
        </a>
        <a href="/users/sign_up" class="btn new-btn">Sign up</a>
    </div>
{{else}}

{{#if current_user.notifications_count}}
    <ul>
        <li class="notification-count" title='Notifications'>
            <a href="/notifications" target="_blank">
                {{current_user.notifications_count}}
            </a>
        </li>
    </ul>
{{/if}}
    <ul class="nav-popout bottom">
        {{#if loggedIn}}
        <li class="popout-root">
            {{#linkToPerson current_user}}
                {{{personImage this "small" "medium"}}}
            {{/linkToPerson}}
        </li>

        <ul class="sub">
            <li title='My Likes'>
                <a href="/likes">
                    <img src="{{imageUrl "nav/likes.png"}}" />
                </a>
            </li>

            <li title="Settings">
                <a href="/users/edit">
                    <img src="{{imageUrl "nav/settings.png"}}" />
                </a>
            </li>
            <li title="Log Out">
                <a href="/users/sign_out">
                    <img src="{{imageUrl "nav/logout.png"}}" />
                </a>
            </li>
        </ul>
        {{/if}}
    </ul>
{{/unless}}
