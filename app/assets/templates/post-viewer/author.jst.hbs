<div class="img">
    {{#linkToPerson author}}
        <div class="profile-image-container small" style="background-image : url('{{avatar.small}}');" data-placement="right"></div>
    {{/linkToPerson}}
</div>

<div class="bd">
    {{#linkToPerson author}}
        {{name}}
    {{/linkToPerson}}

    {{#if root}}
    <i class="icon-random"></i>
        {{#linkToPost root}}
          {{author.name}}
        {{/linkToPost}}
    {{/if}}

    <div class="post-time">
        <time datetime="{{created_at}}" />
        {{#unless public}}
          <i class="icon-lock"> </i>
        {{/unless}}
    </div>
</div>
