<h1 id='page_title'>
    {{display_name}}
    <small>
        {{makr_count}} <em>Makrs</em>
        {{likes_count}} <em>Likes</em>
        {{remix_count}} <em>Remixes</em>
    </small>
</h1>
<h6 id='tag-info-share'>Invite your friends<div id='share_actions'/></h6>
{{description}}
<div class='clearfix'/>
<div id='tag-leaders'>
    <h6>
        Top Contributors
    </h6>
    
    {{#each makrs}}
        <div class="leader" style="background-image:url('{{avatar.large}}');">
            <a href='/{{username}}' title='{{name}}' data-placement="bottom">
            </a>
        </div>
    {{/each}}
</div>

