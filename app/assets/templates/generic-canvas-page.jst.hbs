<div class="container">
    {{#unless loggedIn}}
       <h2 class='featured-title'>{{pageTitle}} <small><a href='/latest' >See what people are remixing right now!</a></small></h2>
    {{else}}
        {{#if title}}
            <h1 id="page_title">
                {{title}}
                {{#if description}}
