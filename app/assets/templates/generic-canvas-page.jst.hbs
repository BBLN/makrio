<header/>

<div class="container" style="margin-top:35px;">

    {{#unless loggedIn}}
        <div id="welcome" class="hero-unit">
            <img id='logo-title' src='{{imageUrl "landing_title@2x.jpg"}}' width="55%" />
            <div class="sign-up-btns">
                <a href="/users/auth/facebook" class="btn-large new-btn fb-btn" style="margin-right:10px;">
                    <img src="{{imageUrl "logos/fb_f.png"}}" class="fb-f" />
                    Log in with Facebook
                </a>
                <a href="/users/sign_up" class="btn-large new-btn">Sign up with Email</a>
            </div>
            <p>Makr.io is the place for remixing things around the web</p>
        </div>
    {{/unless}}  
</div>

{{#unless loggedIn}} 
<div class='steps'>
    <div class="container image-wrap"> 
        <img class='steps' src='{{imageUrl "landing_steps@2x_mini.jpg"}}' />
    </div>
</div>
{{/unless}} 
<div class="container"> 
    {{#unless loggedIn}} 
       <h2 class='featured-title'>Featured Remixes <small><a href='/stream' >See what people are remixing right now!</a></small></h2>
    {{/unless}} 
    <section id="canvas"/>
   <div id="paginate"><span class="loader hidden"/></div> 
</div> 
