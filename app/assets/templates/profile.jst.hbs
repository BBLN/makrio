<header/>
<div id="user_pane"/>

<div class="container">
    <section id="profile-info"/>
    <section id="canvas"/>

    <div id="paginate"><span class="loader hidden"/></div>
</div>

{{#unless current_user.guid}}
    <div id="sign_up_prompt">
        <div class="container">
            <img src='{{imageUrl "logos/large@2x.png"}}' height='35px' class='banner-logo'/>

            <div class="tagline">
                Remix is the highest form of flattery.
            </div>

            <a href="/users/auth/facebook" class="btn-large new-btn fb-btn" style="margin-right:10px; color: #FFF">
                <img alt="Fb_f" class="fb-f" src='{{imageUrl "logos/fb_f.png"}}'>
                Log in with Facebook
            </a>

            <a href ="/users/sign_up" id="sign_up_button" class="new-btn" data-type="profile">
                Sign up
            </a>
        </div>
    </div>
{{/unless}}
