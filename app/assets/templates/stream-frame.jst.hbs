<div id="{{guid}}" data-id="{{id}}" data-target="#{{guid}}" class="stream-frame-wrapper">
    <section class="frame-meta span6">
        <div class="permalink-wrapper info">
            <a href="/p/{{guid}}">
                <i class="icon-zoom-in icon-white"></i>
            </a>
        </div>
        <div class='stream-frame-feedback'></div>

        <div class="media author">
            {{#linkToPerson author}}
                <div class="img">
                    <div class="profile-image-container smaller" style="background-image : url('{{avatar.small}}')"></div>
                </div>
            {{/linkToPerson}}

            <div class="bd">
                {{#linkToPerson author}}
                    {{name}}
                {{/linkToPerson}}
                {{#if root}}
                     <i class="icon-random icon-white"></i> 
                    {{#linkToPost root}}
                        {{author.name}}
                    {{/linkToPost}}
                {{/if}}

                {{#if current_user.admin}}
                    <a href="#" class="toggle-featured">
                        {{#featured}}
                            unfeature
                        {{else}}
                            feature
                        {{/featured}}
                    </a>
                {{/if}}
            </div>
        </div>
    </section>

    <div class="small-frame"></div>
</div>
