<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <ul class="nav pull-right" style='z-index: 20;'>
            <li>
                <a href='{{bookmarkletJS}}' onclick='alert("Drag Me to your bookmarks bar to Remix on makr.io from anywhere!");return false;'>Remix It!</a>
            </li>
            <li>
                <button href="/framer" id="composer-button" class="btn btn-danger" style="box-shadow: 0 -1px 2px #000, 0 1px 2px #444;"><i class="icon-plus icon-white"></i> Make</button>
            </li>

            <li class="divider-vertical"></li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    {{current_user.nickname}}
                    <b class="caret"></b>
                </a>

                <ul class="dropdown-menu">
                    <li><a href="/people/{{current_user.guid}}">Profile</a></li>
                    <li><a href="/notifications">Notifications
                        {{#if current_user.notifications_count}}
                            <span class="badge badge-info">{{current_user.notifications_count}}</span>
                        {{/if}}
                    </a></li>
                    <li><a href="/user/edit">Settings</a></li>
                    <li class="divider"></li>
                    <li><a href="/users/sign_out">Log Out</a></li>
                </ul>
            </li>
        </ul>

        <div id="makr_header_centered">
            <a href='/stream' class='logo'>
                <img src="{{imageUrl "makr_home_logo@2x.png"}}" height=26 width=118 />
            </a>
        </div>

        <ul class="nav" style="z-index:100;">
            <li {{#if onLatest}}class="active"{{/if}}><a href="/">Latest</a></li>
            <li {{#if onPopular}}class="active"{{/if}}><a href="/popular">Popular</a></li>
        </ul>
    </div>
</div>


<div id="stream">
    <div id="meta-info-holder"/>
    <div class="container">
        <div class="row">
            <div class='span6'>
                <section id="stream-content" />
                <div id="paginate">
                    <div class="loader"/>
                </div>
            </div>

            <!--Since stream-interactions is fixed, we need a double span5 declaration here :(-->
            <div class="span5">
                <section id="stream-interactions" class="span5"/>
            </div>
        </div>
    </div>
</div>