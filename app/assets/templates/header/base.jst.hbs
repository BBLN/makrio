<div id="header_inner">
    <div class="root">
        <div class="nav-main">
            <a href="/">
                <img src="{{imageUrl "nav/makrlogo.png"}}"/>
            </a>
        </div>

        <span id="root_nav"/>

        {{#if loggedIn}}
            <div id='user_pane'>
                <ul>
                    <li title='New Remix'>
                        <a href="/framer" class="composer-button icon" data-remix-id="new">
                            <img src="{{imageUrl "nav/new.png"}}" class="composer-button" data-remix-id="new" />
                        </a>
                    </li>
                    <li class="notification-count {{#if current_user.notifications_count}}red{{/if}}"   title='Notifications'>
                        <a href="/notifications" target="_blank">
                            {{current_user.notifications_count}}
                        </a>
                    </li>
                </ul>

                <ul class="nav-popout bottom">
                    <li class="popout-root">
                        {{#linkToPerson current_user}}
                            {{{personImage this "small" "medium"}}}
                        {{/linkToPerson}}
                    </li>

                    <ul class="sub">
                        <li title="Settings">
                            <a href="/users/edit" class='icon'>
                                <img src="{{imageUrl "nav/settings.png"}}" />
                            </a>
                        </li>
                        <li title="About">
                            <a href="/about" class='icon' rel="backbone">
                                <img src="{{imageUrl "nav/about3@2x.png"}}" />
                            </a>
                        </li>
                        <li title="Log Out">
                            <a href="/users/sign_out" class='icon'>
                                <img src="{{imageUrl "nav/logout.png"}}" />
                            </a>
                        </li>
                    </ul>
                </ul>
            </div>
        {{else}}
            <ul class="login">
                <li>
                    <a href="/about" rel='backbone'>
                        About
                    </a>
                </li>
                <li>
                    <a href="/users/sign_in" class="login-link">
                        Log In
                    </a>
                </li>
            </ul>
        {{/if}}
    </div>

    <div id="sub_header"/>
</div>

{{#unless onStream}}
    <div id="sign_up_banner"/>
{{/unless}}