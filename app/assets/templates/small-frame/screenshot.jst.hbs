<div class='stream-frame-feedback' />

<div class="content">
    <img src="{{screenshot_url}}" {{#if adjustedImageHeight}}style="height:{{adjustedImageHeight}}px;"{{/if}} class="frame-screenshot" />
</div>

{{#if showInfo}}
    <div class="vitals">
        <div class="post-author">
            {{#if staff_picked_at}}
                <i class="icon-star icon-grey"></i>
            {{/if}}

            {{#unless onProfilePage}}
                {{#linkToPerson author}}
                    {{name}}
                {{/linkToPerson}}
            {{/unless}}
        </div>

        <i class="icon-heart icon-grey"></i> {{likesCount}}
        <i class="icon-random icon-grey"></i> {{interactions.remix_count}}
        <i class="icon-comment icon-grey"></i> {{commentsCount}}
    </div>
{{/if}}

{{#each stacks}}
    <div class="stack-el" />
{{/each}}
